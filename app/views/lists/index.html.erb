<h2>Movie lists</h2>
<div class="index_container">
  <% @lists.each do |list| %>
  <div class="card" style="width: 8rem; margin: 0 4px">
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to list.name.capitalize, list_path(list) %></h5>
      </div>
    </div>
  <br>
  <% end %>
</div>
